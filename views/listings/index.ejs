        <img src="assets/expresso.png" alt="logo" width="150px" height="100px">
        <div class="auth">
            <span class="login">
                <form >
                <button class="btn btn-outline-light btn-lg" data-bs-toggle="modal" data-bs-target="#loginModal" type="button" >Login</button></form>
            </span>
            
            <span class="signup">
                <form a >
                <button class="btn btn-outline-light btn-lg" data-bs-toggle="modal" data-bs-target="#signupModal" type="button">Sign Up </button>
            </form>
            </span>
        </div>
    </div>

   


    <div class="header"> 
        

        <header class="title">
            <span class="e">E</span>
            <span class="S1">X</span>
            <span class="P">P</span>
            <span class="R">R</span>
