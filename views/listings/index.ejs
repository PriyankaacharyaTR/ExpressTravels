                <div class="mb-4">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                </div>
                <div class="mb-4">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="btn btn-outline-secondary btn-lg">Sign up</button>
              </form>
            </div>
          </div>
        </div>
      </div>

    <script>// Array of video sources
        const videoSources = ["assets/vid-1.mp4", "assets/vid-2.mp4", "assets/vid-4.mp4", "assets/vid-5.mp4", "assets/vid-1.mp4"];
        let currentIndex = 0;
        const videoSlider = document.getElementById("video-slider");
        
        // Function to update video sources
        function updateVideoSource(index) {
            videoSlider.src = videoSources[index];
            videoSlider.play();
        }
        
        // Event listeners for arrows
        document.getElementById("next-arrow").addEventListener("click", () => {
            currentIndex = (currentIndex + 1) % videoSources.length;
            updateVideoSource(currentIndex);
        });
        
        document.getElementById("prev-arrow").addEventListener("click", () => {
            currentIndex = (currentIndex - 1 + videoSources.length) % videoSources.length;
            updateVideoSource(currentIndex);
        });</script>
