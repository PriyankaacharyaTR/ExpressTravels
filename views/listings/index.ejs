/* Keyframes for fade-in effect */
@keyframes fadeIn {
    from { opacity: 0; transform: translateX(-30px); }
    to { opacity: 1; transform: translate(0,0);
     }
}

/* Delays for each letter */
.e { animation: fadeIn 1s forwards;
    animation-delay: 0.5s; }
.S1 { animation: fadeIn 1s forwards;
    animation-delay: 1s; }
.P { animation: fadeIn 1s forwards;
    animation-delay: 1.5s; }
.R { animation: fadeIn 1s forwards;
    animation-delay: 2s; }
.E { animation: fadeIn 1s forwards;
    animation-delay: 2.5s; }
.S2 { animation: fadeIn 1s forwards;
    animation-delay: 3s; }
.S3 { animation: fadeIn 1s forwards;
    animation-delay: 3.5s; }
.O { animation: fadeIn 1s forwards;
    animation-delay:4s; }

    /* Plane animation */
    .plane {
        position: relative;
        width: 50px;
        opacity: 0;
        top: 0;
        left: 500px;
        height: auto;
        animation: movePlane 9s forwards; /* Duration matches the last letter animation */
        animation-delay: 0.5s; /* Start after 'e' appears */
    }

    @keyframes movePlane {
        0% {
            position: relative;
            left: 25vw;
            opacity: 1;
            bottom: 100vh;
            transform: translateX(0) translateY(-120px);
        }
      
        100% {
            position: relative;
            left: 72vw; /* End at the O */
            opacity: 1;
            bottom: 100vh;
            transform: translateX(0) translateY(-160px);
        }
    }

    body {
        overflow-x: hidden;
    }
    

/* Video Background */
.video-container video {
    position: fixed;
    top: 0;
    left: 0;
